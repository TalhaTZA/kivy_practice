#: kivy 1.10.0
#: import SlideTransition kivy.uix.screenmanager.SlideTransition


<MultipleScreens>:
    transition: SlideTransition()
    
    
    Screen:
        name: 'colorscreen'
        ColorPicker:
            id: _color_picker
            color: 0,.3,.6,1
        Button:
            color: 1,0,0,1
            text: "Select"
            pos_hint: {'center_x':.75 , 'center_y': .05}
            size_hint: None,None
            size: 150,50
            on_press: root.current = 'gesture'
    
    GestureRecorder:
        name: 'gesture'
        color_picker: _color_picker
        